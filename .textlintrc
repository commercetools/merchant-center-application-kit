{
  "plugins": {
    "@textlint/markdown": {
      "extensions": [".md", ".mdx"]
    }
  },
  "filters": {
    "comments": true
  },
  "rules": {
    "no-start-duplicated-conjunction": true,
    "common-misspellings": true,
    "diacritics": true,
    "en-capitalization": {
      "allowWords": [
        "import"
      ]
    },
    "eslint": {
      "configFile": ".eslintrc.yaml",
      "ignoreParsingErrors": true,
      "langs": [
        "js",
        "jsx",
        "javascript",
        "json",
        "css",
        "bash",
        "zsh"
      ]
    },
    "no-dead-link": {
      "ignore": [
        "https://portal.aws.amazon.com/*"
      ]
    },
    "period-in-list-item": true,
    "stop-words": {
      "exclude": [
        "e.g."
      ]
    },
    "terminology": true,
    "title-case": true,
    "write-good": {
      "adverb": false,
      "passive": false
    }
  }
}